<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmployeeAuthenticationActivity"
    android:background="@color/colorGreenLight">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_43sdp"
        android:orientation="vertical"
        android:padding="@dimen/_3sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_2sdp"
            android:text="Kashier."
            android:textSize="@dimen/_17ssp"
            android:fontFamily="@font/uber_move_bold"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_2sdp"
            android:text="All-in-one Online Point of Sales System"
            android:textSize="@dimen/_7ssp"
            android:fontFamily="@font/uber_move_bold"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:textColor="@color/black"/>




        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_138sdp"
            android:layout_height="@dimen/_200sdp"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            >

            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_2sdp"
                    android:text="Login"
                    android:textSize="@dimen/_15ssp"
                    android:fontFamily="@font/uber_move_bold"
                    android:textColor="@color/black"/>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <EditText
                        android:id="@+id/code_1"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@drawable/code_text_view_background"
                        android:fontFamily="@font/uber_move_bold"
                        android:gravity="center"
                        android:hint="0"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:maxLength="1"/>

                    <EditText
                        android:id="@+id/code_2"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@drawable/code_text_view_background"
                        android:fontFamily="@font/uber_move_bold"
                        android:gravity="center"
                        android:hint="0"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/code_3"
                        app:layout_constraintStart_toEndOf="@+id/code_1"
                        app:layout_constraintTop_toTopOf="parent"
                        android:maxLength="1"/>

                    <EditText
                        android:id="@+id/code_3"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@drawable/code_text_view_background"
                        android:fontFamily="@font/uber_move_bold"
                        android:gravity="center"
                        android:hint="0"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/code_4"
                        app:layout_constraintStart_toEndOf="@+id/code_2"
                        app:layout_constraintTop_toTopOf="parent"
                        android:maxLength="1"/>

                    <EditText
                        android:id="@+id/code_4"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@drawable/code_text_view_background"
                        android:fontFamily="@font/uber_move_bold"
                        android:gravity="center"
                        android:hint="0"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/code_5"
                        app:layout_constraintStart_toEndOf="@+id/code_3"
                        app:layout_constraintTop_toTopOf="parent"
                        android:maxLength="1"/>

                    <EditText
                        android:id="@+id/code_5"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@drawable/code_text_view_background"
                        android:fontFamily="@font/uber_move_bold"
                        android:gravity="center"
                        android:hint="0"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:maxLength="1"/>



                </androidx.constraintlayout.widget.ConstraintLayout>





                <RelativeLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:id="@+id/play_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background_positive"
                    android:enabled="false"
                    android:paddingVertical="@dimen/_4sdp">

                    <TextView
                        android:id="@+id/btn_indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:fontFamily="@font/uber_move_bold"
                        android:text="Log in"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_5ssp" />


                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>