<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_3sdp"
    android:id="@+id/shimmerLayoutProduct">

    
    <LinearLayout
        android:padding="@dimen/_5sdp"
        android:layout_width="@dimen/_73sdp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_product_background"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_5sdp">

            <ImageView
                android:id="@+id/productImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shimmerbg"
                android:scaleType="centerCrop"/>


        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/productName_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_2sdp"
            android:lines="2"
            android:textSize="@dimen/_5ssp"
            android:fontFamily="@font/uber_move"
            android:background="@drawable/shimmerbg"
            android:textColor="@color/black"/>

        <TextView
            android:layout_marginTop="@dimen/_1sdp"
            android:id="@+id/productPrice_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_2sdp"
            android:textSize="@dimen/_6ssp"
            android:fontFamily="@font/uber_move_bold"
            android:background="@drawable/shimmerbg"
            android:textColor="@color/colorBlue"/>



    </LinearLayout>


</com.facebook.shimmer.ShimmerFrameLayout>